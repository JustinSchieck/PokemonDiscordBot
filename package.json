{
  "name": "pokebot",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rmdir /s /q dist 2>nul || true",
    "build": "npm run clean && tsc",
    "deploy": "npm run build && node dist/deploy-commands.js",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "deploy:dev": "ts-node --esm src/deploy-commands.ts",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@types/canvasjs": "^1.9.11",
    "canvas": "^3.2.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "babel-jest": "^30.1.2",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
